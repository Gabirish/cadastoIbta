<p id="notice"><%= notice %></p>

<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Nascimento</th>
      <th>CPF / CNPJ</th>
      <th>PF /  PJ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.sexo %></td>
        <td><%= usuario.data_nascimento %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.pf_pj %></td>
        <td><%= link_to 'Visualizar', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Deletar', usuario, method: :delete, data: { confirm: 'Deletar usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

